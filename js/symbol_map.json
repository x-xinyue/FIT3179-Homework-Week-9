{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 500,
  "title": "Property Map",
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-Homework-Week-9/main/js/output.json",
        "format": {"type": "topojson", "feature": "my"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-Homework-Week-9/main/js/output.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
        },
      "mark": {"type": "geoshape", "stroke": "lightgray", "fill": null}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-Homework-Week-9/refs/heads/main/data/houses_geocoded_merged.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}, "opacity": 0.7},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "tooltip": [
          {"field": "Building Name", "type": "nominal"},
          {"field": "price", "type": "quantitative"},
          {"field": "Bedroom", "type": "quantitative"},
          {"field": "Bathroom", "type": "quantitative"},
          {"field": "Address", "type": "nominal"}
        ]
      }
    }
  ]
}
